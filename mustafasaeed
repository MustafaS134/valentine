<script>

/* -------- DUBAI COUNTDOWN -------- */

function getDubaiNow(){
return new Date(new Date().toLocaleString("en-US",{timeZone:"Asia/Dubai"}));
}

const unlockDate=new Date("2026-02-14T00:00:00+04:00"); // Dubai time

function updateCountdown(){
const now=getDubaiNow();
const diff=unlockDate-now;

if(diff<=0){
document.getElementById("countdownPage").style.display="none";
document.getElementById("page1").style.opacity=1;
return;
}

const hours=Math.floor(diff/(1000*60*60));
const minutes=Math.floor((diff%(1000*60*60))/(1000*60));
const seconds=Math.floor((diff%(1000*60))/1000);

document.getElementById("timer").innerHTML=
`${hours}h ${minutes}m ${seconds}s`;
}

setInterval(updateCountdown,1000);
updateCountdown();

/* -------- NO BUTTON -------- */

const noBtn=document.getElementById("noBtn");
let scale=1;
let opacity=1;

function escapeNo(){
scale-=0.1;
opacity-=0.1;
if(scale<=0){noBtn.style.display="none";return;}
noBtn.style.transform=`scale(${scale})`;
noBtn.style.opacity=opacity;
noBtn.style.left=Math.random()*80+"vw";
noBtn.style.top=Math.random()*80+"vh";
}

noBtn.addEventListener("mouseover",escapeNo);
noBtn.addEventListener("click",escapeNo);

/* -------- SURPRISE FLOW -------- */

function startSurprises(){
document.getElementById("page1").style.opacity=0;
setTimeout(showLavender,1500);
}

function showLavender(){
const page=document.getElementById("lavender");
page.style.opacity=1;
for(let i=0;i<70;i++){
const flower=document.createElement("div");
flower.classList.add("flower");
flower.style.left=Math.random()*100+"vw";
flower.style.height=(40+Math.random()*80)+"px";
page.appendChild(flower);
}
setTimeout(showBalloons,5000);
}

function showBalloons(){
document.getElementById("lavender").style.opacity=0;
const page=document.getElementById("balloons");
page.style.opacity=1;
for(let i=0;i<30;i++){
const balloon=document.createElement("div");
balloon.classList.add("balloon");
balloon.style.left=Math.random()*100+"vw";
balloon.style.background=`hsl(${Math.random()*360},70%,70%)`;
balloon.style.animationDuration=(6+Math.random()*5)+"s";
page.appendChild(balloon);
}
setTimeout(showFireworks,5000);
}

function showFireworks(){
document.getElementById("balloons").style.opacity=0;
const page=document.getElementById("fireworks");
page.style.opacity=1;
setInterval(createFirework,800);
setTimeout(typeLetter,4000);
}

function createFirework(){
for(let i=0;i<30;i++){
const spark=document.createElement("div");
spark.classList.add("spark");
spark.style.left=Math.random()*100+"vw";
spark.style.top=Math.random()*60+"vh";
spark.style.background=`hsl(${Math.random()*360},100%,60%)`;
const angle=Math.random()*2*Math.PI;
const distance=100+Math.random()*80;
spark.style.setProperty("--x",Math.cos(angle)*distance+"px");
spark.style.setProperty("--y",Math.sin(angle)*distance+"px");
document.getElementById("fireworks").appendChild(spark);
setTimeout(()=>spark.remove(),1000);
}
}

function typeLetter(){
const text=`Happy Valentineâ€™s meri jaan...

(I kept your full letter here â€” you can paste full version exactly as before)`;

const letter=document.getElementById("finalLetter");
letter.style.opacity=1;
let i=0;
function typing(){
if(i<text.length){
letter.innerHTML+=text.charAt(i);
i++;
setTimeout(typing,20);
}}
typing();
}

</script>
